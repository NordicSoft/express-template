{
  "name": "express-template",
  "version": "1.0.5",
  "description": "Website template (skeleton) based on Express.js 4, Vue.js and Vuetify 2",
  "author": "NordicSoft",
  "license": "MIT",
  "private": true,
  "main": "index.js",
  "commit": "${commit}",
  "backup": "${backup}",
  "scripts": {
    "lint": "npx eslint --ext .js,.vue .",
    "lint-fix": "npm run lint -- --fix",
    "build": "(cd facade && npm gulp build); (cd dashboard && npm run build)",
    "deploy": "npx gulp deploy",
    "dev:api": "(cd api && npm run dev)",
    "dev:facade": "(cd facade && npm run dev)",
    "dev:dashboard": "(cd dashboard && npm run dev)",
    "dev": "npx concurrently npm:dev:* \"node index.js\" --raw --kill-others-on-fail",
    "postinstall": "(cd api && npm install); (cd facade && npm install); (cd dashboard && npm install)",
    "start:api": "node api",
    "start:facade": "node facade",
    "start:dashboard": "node dashboard",
    "start": "npm run start:api & npm run start:facade & npm run start:dashboard & node index.js"
  },
  "_moduleAliases": {
    "@root": ".",
    "@lib": "app/lib",
    "@store": "app/store",
    "@config": "config.js",
    "@logger": "app/lib/logger.js"
  },
  "dependencies": {
    "dotenv-defaults": "^1.1.1",
    "express": "^4.17.1",
    "http-proxy": "^1.18.0",
    "http-proxy-middleware": "^1.0.3",
    "http-proxy-rules": "^1.1.3"
  },
  "devDependencies": {},
  "nodemonConfig": {
    "ignore": [
      "data/*",
      "logs/*",
      "www/*",
      "assets/*",
      "views/app/templates/*",
      "gulpfile.js"
    ],
    "ext": "js,json,html"
  }
}
